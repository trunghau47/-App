<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/center_dialog_background"
    android:orientation="vertical"
    tools:context=".JoinClass">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF6600"
        android:gravity="center"
        android:padding="12dp"
        android:text="Tham Gia Lớp Học"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Giáo viên của bạn cung cấp mã của lớp học rồi nhập mã đó vào đây."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/idClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_border_gray"
            android:hint="mã lớp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnAcceptClass"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/background_tham_gia"
            android:gravity="center"
            android:text="Tham Gia"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>